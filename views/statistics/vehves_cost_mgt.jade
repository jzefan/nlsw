extends ../layout
block content
  div#chart-panel.panel.panel-default
    div.panel-heading.clearfix
      input#radio-vehicle(type='radio', name='vehves')
      label(for='radio-vehicle', style='padding-top: 5px;font-weight:normal; margin-bottom:0;margin-right:10px') &nbsp;车
      input#radio-vessel(type='radio', name='vehves')
      label(for='radio-vessel', style='padding-right:10px; font-weight:normal; margin-bottom:0;border-right:1px dotted darkgray;') &nbsp;船

      label#lb-vehves-name(for='vehves-name', style='margin-left:15px;') 车船名
      select#vehves-name(style='margin-top:-3px;margin-left:10px;width:320px;height:30px;', multiple="multiple")

      button#month-search.btn.btn-primary.btn-sm(style='margin-left:15px;')
        i.fa.fa-search
        | &nbsp;月份查询

      div.btn-group.pull-right(style='margin-left:15px')
        button#data-add.btn.btn-default
          i.fa.fa-plus-square-o
          | &nbsp;增加
        button#data-modify.btn.btn-default.disabled
          i.fa.fa-pencil-square-o
          | &nbsp;修改
        button#data-delete.btn.btn-default.disabled
          i.fa.fa-minus-square-o
          | &nbsp;删除
        button#data-export.btn.btn-default
          i.fa.fa-external-link-square
          | &nbsp;导出

    div.panel-body
      div(style="overflow:scroll;min-height:65%;height:65vh")
        table#vehicle-table.table.table-bordered(style='margin-bottom: 0px !important;')
          thead
            tr
              th 月份
              th 车号
              th 配件
              th 修理费
              th 年检二维费用
              th 驾驶员工资
              th 油费
              th 过路费
              th 罚款
              th 其它
              th 合计
          tbody#vehicle-tbody

        table#vessel-table.table.table-bordered(style='margin-bottom: 0px !important;display:none;')
          thead
            tr
              th 月份
              th 保险费用
              th 吊装费用
              th 港口建设费
              th 辅料
              th 其它
              th 合计
          tbody#vessel-tbody

  #data-dialog.modal.fade
    .modal-dialog(style='min-width:50%')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4.modal-title 增加车船固定费用
        .container(style='width: 100%')
          .row.margin.form-horizontal
            .col-md-6.col-sm-2#dd-col-vvname
              .form-group
                label.control-label.col-sm-4(for='vvname') 车船名
                select#vvname.form-control

            .col-md-6.col-sm-2
              .form-group
                label.control-label.col-sm-4(for='month-choice') 选择月份
                div.input-group.date#month-choice-grp
                  input#month-choice.form-control(type='text', name='month-choice')
                  span.input-group-addon
                    i.fa.fa-calendar
          div#data-input
            .row.margin.form-horizontal#vehicle-row
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-fittings') 配件
                  .input-group.col-sm-8
                    input#i-fittings.form-control(type='text', name='i-fittings')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-repair') 修理费
                  .input-group.col-sm-8
                    input#i-repair.form-control(type='text', name='i-repair')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-as') 年检二维费用
                  .input-group.col-sm-8
                    input#i-as.form-control(type='text', name='i-as')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-salary') 驾驶员工资
                  .input-group.col-sm-8
                    input#i-salary.form-control(type='text', name='i-salary')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-oil') 油费
                  .input-group.col-sm-8
                    input#i-oil.form-control(type='text', name='i-oil')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-toll') 过路费
                  .input-group.col-sm-8
                    input#i-toll.form-control(type='text', name='i-toll')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-fine') 罚款
                  .input-group.col-sm-8
                    input#i-fine.form-control(type='text', name='i-fine')

            .row.margin.form-horizontal#vessel-row(style='display:none;')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-ic') 保险费用
                  .input-group.col-sm-8
                    input#i-ic.form-control(type='text', name='i-ic')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-hc') 吊装
                  .input-group.col-sm-8
                    input#i-hc.form-control(type='text', name='i-hc')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-pcc') 港口建设费
                  .input-group.col-sm-8
                    input#i-pcc.form-control(type='text', name='i-pcc')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-aux') 辅料
                  .input-group.col-sm-8
                    input#i-aux.form-control(type='text', name='i-aux')

            .row.margin.form-horizontal(style='margin-top:-8px;')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-other') 其它
                  .input-group.col-sm-8
                    input#i-other.form-control(type='text', name='i-other')
              .col-md-6.col-sm-2
                .form-group
                  label.control-label.col-sm-4(for='i-total') 合计
                  .input-group.col-sm-8
                    input#i-total.form-control(type='text', name='i-total', value='0', style='color:red;text-align:right;font-weight:bold')

          .modal-footer(style='margin-top: 0px')
            button.btn.btn-default(data-dismiss='modal') 取消
            button#data-btn-ok.btn.btn-primary.disabled 确定

  include stat_condition

  script.
    var local_data = !{JSON.stringify(dData)};

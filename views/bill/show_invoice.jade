#show-invoice-dialog.modal.fade(tabindex='-1', role='dialog', aria-labelledby='showInvoice', aria-hidden='true')
  .modal-dialog(style='min-width:70%')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h4.modal-title 运单信息
      .container(style='width: 100%')
        .row.invoice-info
          .col-sm-4.invoice-col
            b 运单号: &nbsp;
            code#report-waybill-no
          .col-sm-4.invoice-col
            span#lbl-bill-name.lbl(data-toggle="tooltip", title="点击可编辑", style='cursor:pointer;') 发货单位
            address
              strong#report-bill-name
          .col-sm-4.invoice-col
            span#lbl-destination.lbl(data-toggle="tooltip", title="点击可编辑", style='cursor:pointer;') 目的地
            address
              strong#report-ship-to
        .row(style='margin-top:5px;')
          .col-xs-12.table-responsive
            table#report-table.table.table-striped.table-bordered
              thead
                tr
                  th 提单号
                  th 订单号
                  th 牌号
                  th 厚度
                  th 宽度
                  th 长度
                  th 单重
                  th 发运数
                  th 总重
                  th 仓库
                  th 合同号
              //tbody#report-tbody
        .row
          .col-xs-4.pull-right
            .table-responsive
              table.table
                tbody
                  tr
                    th(style='width:50%') 总重量:
                    td#report-total-weight
                  tr
                    th 总发运块数:
                    td#report-total-number
      .modal-footer(style='margin-top: 0px')
        button.btn.btn-primary(data-dismiss='modal') 确定

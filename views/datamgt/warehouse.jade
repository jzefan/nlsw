extends ../layout
block content
  .page-header
    include tool_group

  div(style="overflow:scroll;min-height:65%;height:65vh")
    .row.margin
      table#data-table.table.table-bordered(style='margin-bottom: 0px !important')
        thead
          tr
            th(style='width:20px;max-width:25px;min-width:10px;') 行
            th 仓库
            th 仓库地址
            th 联系人
            th 联系人电话
        tbody#data-tbody
          if dData
            each ware, index in dData
              tr
                td= index + 1
                td= ware.name
                th= ware.address
                td= ware.contact_name
                td= ware.phone
  include data_dialog

extends ../layout
block content
  .page-header(style='margin-bottom:5px;')
    .btn-group(style='margin-right:5px;')
      button#settle-money.btn.btn-default.btn-sm(data-toggle="tooltip", data-placement='bottom', title="回款已开票的记录")
        i.fa.fa-ticket
        | &nbsp;回款
      button#settle-money-cancel.btn.btn-default.btn-sm
        i.fa.fa-mail-reply
        | &nbsp;回款取消

    .btn-group(style='margin-right:15px;')
      button#filter.btn.btn-default.btn-sm
        i.fa.fa-search-plus
        | &nbsp;过滤
      button#search-export.btn.btn-default.btn-sm
        i.fa.fa-external-link-square
        | &nbsp;导出
      button#show-detail.btn.btn-default.btn-sm
        i.fa.fa-list
        | &nbsp;显示明细
      button#real-price-input.btn.btn-default.btn-sm 实收价格输入

    input#ticket-radio(type="radio", name="settle-tieck-box" checked)
    label(for="ticket-radio", style="margin-left:3px; margin-right:10px; font-size:12px; font-weight:normal") &nbsp;显示开票
    input#money-radio(type="radio", name="settle-tieck-box")
    label(for="money-radio", style="margin-left:3px; margin-right:15px;font-size:12px; font-weight:normal") &nbsp;显示回款

    h5.pull-right(style="margin-top:8px;") 记录数:
      code#curr-settle-num 0
    h5.pull-right(style="margin-top:8px;margin-right:5px;") 金额:
      code#lb-total-amount 0
    h5.pull-right(style="margin-top:8px;margin-right:10px;") 重量:
      code#lb-total-weight 0
    h5.pull-right(style="margin-top:8px;margin-right:10px;") 发运块数:
      code#lb-total-num 0

  include ../partials/settle_info

  script.
    var local_user = !{JSON.stringify(user)};
    var local_dbData = !{JSON.stringify(dbSettleData)};

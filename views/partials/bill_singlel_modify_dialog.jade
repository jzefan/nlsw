#single-modify-dialog.modal.fade(tabindex='-1', role='dialog', aria-labelledby='billModifyLabel', aria-hidden='true')
  .modal-dialog(style='min-width:85%')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h4.modal-title 单记录修改
      .container(style='width: 100%; margin-top:5px;')
        div.box.box-solid
          div.box-body
            .row.margin
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 订单号
                code#h_order_no
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 订单项次号
                code#h_order_item_no
              //.col-md-3.col-sm-4
              //  span.label.label-primary(style='margin-right:15px;') 提单号
              //  code#h_bill_no
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 状态
                code#status
            .row.margin
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 长度
                code#mod_len
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 宽度
                code#mod_width
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 厚度
                code#mod_thickness
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 已发块数
                code#mod_ship_num
            .row.margin
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 创建日期
                code#create_date
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 发货日期
                code#shipping_date
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 结算日期
                code#settle_date
            .row.margin
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 销售部门
                code#mod-sale-dep
              .col-md-3.col-sm-4
                span.label.label-primary(style='margin-right:15px;') 尺寸
                code#mod-size-type


        h4.page-header 可修改项
        .row.form-horizontal
          .col-md-6
            .form-group
              label.col-sm-4.control-label(for='brand_no') 牌号
              .input-group.col-sm-8
                input#brand_no.form-control(type='text', name='brand_no', autofocus='autofocus')
            .form-group
              label.col-sm-4.control-label(for='billing_name') 开单名称
              .input-group.col-sm-8
                input#billing_name.form-control(type='text', name='billing_name')
            .form-group
              label.col-sm-4.control-label(for='ship_warehouse') 发货仓库
              .input-group.col-sm-8
                input#ship_warehouse.form-control(type='text', name='ship_warehouse')
            .form-group
              label.col-sm-4.control-label(for='contract_no') 合同号
              .input-group.col-sm-8
                input#contract_no.form-control(type='text', name='contract_no')
          .col-md-6
            .form-group
              label.col-sm-4.control-label(for='mod-bill-no') 提单号
              .input-group.col-sm-6
                input#mod-bill-no.form-control(type='text', name='mod-bill-no')
            .form-group#mod-tot-num-grp
              label.col-sm-4.control-label(for='mod-total-number') 总块数
              .input-group.col-sm-6
                input#mod-total-number.form-control(type='text', name='mod-total-number')
            .form-group#mod-tot-weight-grp(style='display:none;')
              label.col-sm-4.control-label(for='mod-total-weight') 总重量
              .input-group.col-sm-6
                input#mod-total-weight.form-control(type='text', name='mod-total-weight')


            //fieldset.scheduler-border(style='display:none;')
              legend.scheduler-border 重量块数列表
              .form-group
                label.control-label.col-sm-1
                .col-sm-5
                  label.control-label(for='single_weight') 重量
                  .input-group
                    input#single_weight.form-control(type='text', name='single_weight')
                .col-sm-5
                  label.control-label(for='single_num') 数量(块数)
                  .input-group
                    input#single_num.form-control(type='text', name='single_num')
              .form-group
                label.control-label.col-sm-1
                div.col-sm-11
                  button#weight_num_add.btn.btn-primary.btn-sm(type='text') 增加重量块数
                  button#weight_num_del.btn.btn-danger.btn-sm.margin-left(type='text') 删除
                  button#weight_num.btn.btn-default.btn-sm(type='text' style='margin-left:15px') 总量: 0.000 总块数: 0
              .form-group
                label.control-label.col-sm-1
                .col-sm-10
                  select#weight_num_list.form-control(size='3')
        .modal-footer(style='margin-top: 0px')
          button.btn.btn-default(data-dismiss='modal') 取消
          button#single-modify-btn-ok.btn.btn-primary 确定


div#ghx-tab-details.ghx-detail-section
  //div.ghx-header
  //  h3 详细信息
  div#price-section.ghx-tab-section(style='display:none;')
    h4 价格
    div#price-content.ghx-tab-section-content
  div.ghx-tab-section
    h4 大小重量信息
    div.ghx-tab-section-content
      dl.ghx-detail-list
        dt.ghx-detail-term 长度:
        dd#ghx-len.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 宽度:
        dd#ghx-width.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 厚度:
        dd#ghx-thickness.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 尺寸:
        dd#ghx-size-type.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 单块重:
        dd#ghx-weight.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 实际块数:
        dd#ghx-block-size.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 总重量:
        dd#ghx-total-weight.ghx-detail-description
  div.ghx-tab-section
    h4 其它信息
    div.ghx-tab-section-content
      //dl.ghx-detail-list
      //  dt.ghx-detail-term 提单号:
      //  dd#ghx-bill-no.ghx-detail-description
      //dl.ghx-detail-list
      //  dt.ghx-detail-term 订单号:
      //  dd#ghx-order-no.ghx-detail-description
      //dl.ghx-detail-list
      //  dt.ghx-detail-term 项次号
      //  dd#ghx-order-item-no.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 牌号:
        dd#ghx-brand-no.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 销售部门:
        dd#ghx-sales-dep.ghx-detail-description
      //dl.ghx-detail-list
      //  dt.ghx-detail-term 存放仓库:
      //  dd#ghx-warehouse.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 发货仓库:
        dd#ghx-ship-warehouse.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 合同号:
        dd#ghx-contract-no.ghx-detail-description
  div.ghx-tab-section
    h4 人员
    div.ghx-tab-section-content
      dl.ghx-detail-list
        dt.ghx-detail-term 创建人:
        dd#ghx-creater.ghx-detail-description
      dl.ghx-detail-list
        dt.ghx-detail-term 发货人:
        dd#ghx-shipper.ghx-detail-description
  div.ghx-tab-section
    h4 日期
    div.ghx-tab-section-content
      dl.ghx-detail-list
        dt.ghx-detail-term 创建日期:
        dd.ghx-detail-description
          span#ghx-create-date.date.user-tz
      dl.ghx-detail-list
        dt.ghx-detail-term 发货日期:
        dd.ghx-detail-description
          span#ghx-shipping-date.date.user-tz

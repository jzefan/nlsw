.row
  .col-xs-12.connectedSortable
    .box
      .box-body.table-responsive
        if bWaybillSearch
          table#show_search_data.table.table-bordered.table-hover
            thead
              tr
                th 状态
                th 运单号
                //th 提单号
                //th 订单号
                //th 订单项次号
                //th 单价
                th 单重
                th 发运块数
                th 发运重量
                th 车船号
                th 发货仓库
                th 发货单位
                th 发货目的地
                th 发货日期
                th 总重
            tbody
              each data in simple_query_result
                each bill in data.bills
                  tr
                    if data.state == '新建'
                      td
                        span.label.label-success 新建
                    else if data.state == '已配发'
                      td
                        span.label.label-info 已配发
                    else if data.state == '已结算'
                      td
                        span.label.label-default 已结算
                    else
                      td
                        span.label.label-default= data.state
                    td= data.waybill_no
                    //td= data.bill_no
                    //td= data.order_no
                    //td= data.order_item_no
                    //td= bill.price
                    td= bill.weight
                    td= bill.num
                    td= bill.num * bill.weight
                    td= data.vehicle_vessel_name
                    td= data.ship_warehouse
                    td= data.ship_name
                    td= data.ship_to
                    td= data.ship_date_str
                    td= data.total_weight

        else
          table#show_search_data.table.table-bordered.table-hover
            thead
              tr
                th 状态
                th 提单号
                th 订单号
                th 订单项次号
                th 牌号
                th 开单名称
                th 厚度
                th 宽度
                th 长度
                th 尺寸
                th 单重
                th 块数
                th 总重量
                th 销售部门
                th 发货仓库
                th 合同号
            tbody
              each data in simple_query_result
                tr
                  if data.status == '新建'
                    td
                      span.label.label-success 新建
                  else if data.status == '已配发'
                    td
                      span.label.label-info 已配发
                  else if data.status == '已结算'
                    td
                      span.label.label-default 已结算
                  else
                    td
                      span.label.label-default= data.status
                  td= data.bill_no
                  td= data.order_no
                  td= data.order_item_no
                  td= data.brand_no
                  td= data.billing_name
                  td= data.thickness
                  td= data.width
                  td= data.len
                  td= data.size_type
                  td= data.weight
                  td= data.block_num
                  td= data.total_weight
                  td= data.sales_dep
                  td= data.ship_warehouse
                  td= data.contract_no
